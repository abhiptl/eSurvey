<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollViewEntrepreneur"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".CapitalDetailActivity">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                    android:text="12. Working capital details(Rupees)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="Amount to be received from customers (from credit sales)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText android:id="@+id/eTextAmountReceivedFromCustomer" android:inputType="numberDecimal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>

            <TextView
                    android:text="Amount to be paid to Suppliers (for credit purchases)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText android:id="@+id/eTextAmountPaidToSupplied" android:inputType="numberDecimal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="13. Startup capital(Rupees)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"/>


            <TextView
                    android:text="Money invested into the business at the start of the business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText android:id="@+id/eTextAmountInvestedInStart" android:inputType="numberDecimal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>


            <TextView
                    android:text="Money invested after the start of the business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText android:id="@+id/eTextAmountInvestedAfterStart" android:inputType="numberDecimal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"/>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="14. Time of operation of the business	Operation time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="2">
                <TextView
                        android:text="How many months in a year (__/12)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText android:id="@+id/eTextOperationMonthsInYear" android:inputType="numberDecimal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="2">
                <TextView
                        android:text="How many days in a week (__/7)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText android:id="@+id/eTextOperationDaysPerWeek" android:inputType="numberDecimal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="2">
                <TextView
                        android:text="How many hours in a day (__/24)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText android:id="@+id/eTextOperationHoursPerWeek" android:inputType="numberDecimal"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            <TextView
                    android:text="15. People involved in the business Number / How many months in a year (_/12)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="3">
                <TextView
                        android:text="Entrepreneur  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <EditText android:id="@+id/eTextEntrepreneurInvolved" android:inputType="numberDecimal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>

                <EditText android:id="@+id/eTextEntrepreneurInvolvedMonths" android:inputType="numberDecimal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="3">
                <TextView
                        android:text="Family members  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <EditText android:id="@+id/eTextFamilyMembersInvolved" android:inputType="numberDecimal"

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>

                <EditText android:id="@+id/eTextFamilyMembersInvolvedMonths" android:inputType="numberDecimal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="3">
                <TextView
                        android:text="External labourers  "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <EditText android:id="@+id/eTextExternalLabourersInvolved" android:inputType="numberDecimal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>

                <EditText android:id="@+id/eTextExternalLabourersInvolvedMonths" android:inputType="numberDecimal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:layout_weight="1"/>
            </LinearLayout>


            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                          android:weightSum="2">

                <Button android:id="@+id/buttonBackCapitalDetails" android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Back" android:textColor="@color/colorWhite" android:background="@color/colorPrimary"
                        android:textStyle="bold" android:layout_marginRight="10dp"
                        android:textSize="20dp" android:layout_weight="1"/>


                <Button android:id="@+id/buttonNextCapitalDetails" android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="Next" android:paddingLeft="10dp" android:textColor="@color/colorWhite"
                        android:background="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="20dp" android:layout_marginLeft="10dp" android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>

